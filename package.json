{
  "name": "fresh-finds-recipes",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run docs:sync && concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"API,APP\" --prefix-colors \"blue,magenta\"",
    "dev:server": "node server/db/cleanup.js && nodemon server/index.js",
    "dev:client": "vite",
    "typecheck": "vue-tsc --noEmit",
    "build": "node_modules/.bin/vue-tsc --noEmit && node_modules/.bin/vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,vue}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,vue}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx,vue}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx,vue}\" --fix",
    "docs:sync": "bash scripts/sync-docs.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.0.3",
    "vue-tsc": "^2.1.10"
  }
}
